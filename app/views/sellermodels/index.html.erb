<%= render 'layerbegin' %>
<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h3>微信通知管理</h3>
    </div>
    <div class="ibox-content">
      <table class="table table-hover table-bordered text-center">
        <thead>
        <tr>
          <th class="text-center">表名</th>
          <th class="text-center">模板ID</th>
          <th class="text-center">状态</th>
          <th class="text-center">使用状态</th>
          <th class="text-center">操作</th>
        </tr>
        </thead>
        <tbody>
        <% @sellermodels.each do |ret| %>
            <tr>
              <td><%= ret.tablename %></td>
              <td><%= ret.modeid %></td>
              <td><%= ret.stype %></td>
              <td>
                <%if ret.wxtype == 1%>
                    已在微信中删除该模板删除
                <%else%>
                    正常
                <%end%>
              </td>
              <td>
                <%if ret.wxtype != 1%>
                    <%= link_to '编辑',edit_seller_sellermodel_path(@seller,ret) %>
                <%end%>
                <%= link_to '删除', [@seller,ret], method: :delete, data: { confirm: '确认删除?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <%= link_to "返回",seller_path(@seller),class: "btn btn-w-m btn-info " %>
      <div class="btn-group  btn-w-m pull-right" role="group">
        <%= link_to "新增",new_seller_sellermodel_path,class: "btn btn-w-m btn-primary pull-right" %>

      </div>
      <br>
    </div>
  </div>
</div>
<%=render 'layerend' %>