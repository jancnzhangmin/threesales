<%= render 'layerbegin' %>
<style>
    .social-feed-box {
        margin-bottom: 0;
        border-bottom: none;
    }

    .social-feed-box {
        border: 1px solid #e7eaec;
        background: #fff;
        margin-bottom: 15px;
    }
    .social-avatar {
        padding: 15px 15px 0;
    }
    .social-body {
        padding: 15px;
    }
    .media-body {
        overflow: hidden;
    }
    .media-body{
        font-size: 12px;
    }
    .media-body {
        display: block;
        width: auto;
    }
    .media-body {
        overflow: hidden;
    }
    .media-body{
        display: table-cell;
        vertical-align: top;
    }
    .media-body {
        width: 10000px;
    }
    .text-muted {
        color: #888;
    }
    .text-muted {
        color: #777;
    }
    small {
        font-size: 85%;
    }
    small {
        font-size: 80%;
    }
    .social-avatar .media-body a {
        font-size: 14px;
        display: block;
    }
    a {
        cursor: pointer;
    }
    a {
        color: #337ab7;
        text-decoration: none;
    }
    a {
        background-color: transparent;
    }
    .social-avatar img {
        height: 40px;
        width: 40px;
        margin-right: 10px;
    }
    .lsx img{
        width: 100%;
        max-width: 100%;
    }
</style>
<div class="ibox-content form-horizontal m-t">
  <div class="form-group">
    <div style="width: 480px;border: 2px solid #e7e7eb;">
      <div>
        <img src="/images/20180116151159.jpg" style="width:100%">
      </div>
      <div style="padding-top: 25px;padding-left: 15px;padding-right: 15px;">
        <h1>
          <%= @article.title%>
        </h1>
        <h4>
          <span style="color: #868686;padding-right: 8px;"><%= @article.pubiletime.strftime('%Y-%m-%d %H:%M')%></span>
          <span><%= @article.writer%></span>
        </h4>
        <div class="lsx" style="width:100%;background-size:100% 100%" >
          <%= @article.content.html_safe%>
        </div>
        <h4>
          <span>阅读</span>
          <span><%= @article.number%></span>
        </h4>
        <hr>
        <div class="row">
          <div class="col-lg-12">
            <h2 style="text-align: center;">精选评论</h2>
            <% @article.comments.each do |comment| %>
                <div class="social-feed-box">
                  <div class="social-avatar">
                    <a href="javascript:void(0);" class="pull-left">
                      <img alt="image" src="<%= comment.img %>">
                    </a>
                    <div class="media-body">
                      <a href="javascript:void(0);">
                        <%= comment.name %>
                      </a>
                      <small class="text-muted"><%= comment.pubiletime.strftime('%Y-%m-%d %H:%M') %></small>
                      <p style="font-weight: bold;">
                        <%= comment.content %>
                      </p>
                    </div>
                  </div>

                  <div class="social-body" style="padding-top: 0px;">

                    <p>
                      <%= link_to "删除",[:publedel,@seller,@article, comment] %> |
                      <%if comment.fabulous != 1%>
                          <%= link_to '公开',[:publecomm,@seller,@article, comment]%>
                      <%else%>
                          已发布
                      <%end%>
                    </p>
                  </div>
                </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>

    <%= link_to '编辑', edit_seller_article_path(@seller) %> |
    <%= link_to '返回', seller_articles_path %> |
    <%= link_to "删除文章",[@seller,@article],:method => :delete, :confirm => "Are you sure?" %>
  </div>
</div>
<%=render 'layerend' %>