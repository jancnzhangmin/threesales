<%= render 'layerbegin' %>
<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h3>文章管理</h3>
    </div>
    <div class="ibox-content">

      <table class="table table-hover table-bordered text-center">
        <thead>
        <tr>
          <th class="text-center">商家名</th>
          <th class="text-center">标题</th>
          <th class="text-center">作者</th>
          <th class="text-center">发布时间</th>
          <th class="text-center">点击次数</th>
          <th colspan="3" class="text-center">操作</th>
        </tr>
        </thead>

        <tbody>
        <% @articles.each do |article| %>
            <tr>
              <td><%= article.seller.name %></td>
              <td><%= article.title %></td>
              <td><%= article.writer %></td>
              <td><%= article.pubiletime.strftime('%Y-%m-%d %H:%M') %></td>
              <td><%= article.number %></td>
              <td><%= link_to '查看', [@seller,article] %></td>
              <td><%= link_to '编辑', edit_seller_article_path(@seller , article) %></td>
              <td><%= link_to '删除', [@seller,article], method: :delete, data: { confirm: '是否删除?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <div class="btn-group pull-right">
        <%= link_to '新增', new_seller_article_path,class:"btn btn-w-m btn-default " %>
        <%= link_to "返回",seller_path(@seller),class: "btn btn-w-m btn-info " %>
      </div>

      <br>
      <br>
    </div>
  </div>
</div>
<%=render 'layerend' %>


