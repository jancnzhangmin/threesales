<%= render 'layerbegin' %>
<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h3>管理员管理</h3>
    </div>
    <div class="ibox-content" data-turbolinks="false">
      <table class="table table-hover table-bordered text-center">
        <thead>
        <tr>
          <th class="text-center">用户名</th>
          <th class="text-center">帐号</th>
          <th class="text-center">操作</th>
        </tr>
        </thead>
        <tbody>
        <% @admins.each do |admin| %>
            <tr>
              <td><%= admin.username %></td>
              <td><%= admin.login %></td>
              <td>
                <%if @seller != nil%>
                    <%= link_to '编辑',edit_seller_admin_path(@seller,admin) %>
                <%else%>
                    <%= link_to '编辑',edit_admin_path(admin) %>
                <%end%>
                <%= link_to '删除', [@seller,admin], method: :delete, data: { confirm: '确认删除?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <%if @seller != nil%>
          <%= link_to "新增",new_seller_admin_path(@seller),class: "btn btn-w-m btn-primary pull-right" %>
          <%= link_to "返回",seller_path(@seller),class: "btn btn-w-m btn-info " %>
      <%else%>
          <%= link_to "新增",new_admin_path,class: "btn btn-w-m btn-primary pull-right" %>
      <%end%>
      <br>
    </div>
  </div>
</div>
<%=render 'layerend' %>