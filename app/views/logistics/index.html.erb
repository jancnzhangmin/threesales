<%= render 'layerbegin' %>
<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h3>物流公司</h3>
    </div>
    <div class="ibox-content">
      <table class="table table-hover table-bordered text-center">
        <thead>
        <tr>
          <th class="text-center">物流公司名称</th>
          <th class="text-center">操作</th>
        </tr>
        </thead>
        <tbody>
        <% @logistics.each do |logistic| %>
            <tr>
              <td><%= logistic.logistic %></td>
              <td><%= link_to '编辑',edit_logistic_path(logistic) %>
                <%= link_to '删除', logistic, method: :delete,
                            data: { confirm: '确认删除?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <%= link_to "新增",new_logistic_path,class: "btn btn-w-m btn-primary pull-right" %>

      <br>
    </div>
  </div>
</div>
<%=render 'layerend' %>