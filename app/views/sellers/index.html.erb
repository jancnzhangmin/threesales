<%= render 'layerbegin' %>
<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h3>商家管理</h3>
    </div>
    <div class="ibox-content">
      <table class="table table-hover table-bordered text-center">
        <thead>
        <tr>
          <th class="text-center">商家名称</th>
          <th class="text-center">商家简称</th>
          <th class="text-center">联系电话</th>
          <th class="text-center">地址</th>
          <th class="text-center">状态</th>
          <th class="text-center">操作</th>
        </tr>
        </thead>
        <tbody>
        <% @sellers.each do |seller| %>
            <tr>
              <td><%= seller.name %></td>
              <td><%= seller.shortname %></td>
              <td><%= seller.tel %></td>
              <td><%= seller.address %></td>
              <td>
                <% if seller.status == 1%>
                    启用
                <%else%>
                    停用
                <%end%>
              </td>
              <td>
                <%= link_to '查看',seller_path(seller) %>
                <%= link_to '编辑',edit_seller_path(seller) %>
                <%= link_to '删除', seller, method: :delete, data: { confirm: '确认删除?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <%= link_to "新增",new_seller_path,class: "btn btn-w-m btn-primary pull-right" %>
      <br>
    </div>
  </div>
</div>
<%=render 'layerend' %>